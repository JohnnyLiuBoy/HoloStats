# This is an example file for configuring HoloStats.
# Line starts with `#` is comment and will be ignored when parsing.
#
[server]
address = "127.0.0.1:4200"
hostname = "taiwanv.linnli1.me"

# Database Configuration
# HoloStats only supports PostgreSQL
[database]
# url = "postgres://holostats:holostats@192.168.208.206:5433/holostats"
url = "postgres://holostats:holostats@localhost/holostats"

# YouTube Crawling Configuration
[youtube]
# YouTube API keys
api_keys = {{ keys.YOUTUBE_API_KEYS | tojson }}
# URL path for receving pubsub from YouTube
#
# The actual url will be "https://${hostname}/api/pubsub/${pubsub_path}"
pubsub_path = "{{ keys.PUBSUB_PATH }}"

# Bilibili Crawling Configuration
[bilibili]
# Bilibili account cookie
# Certain api requires authorization
cookie = ""

# S3 Configuration
# HoloStats uses s3 for storing stream thumbnailss
#
# You can opt out this feature in the future
[s3]
host = "taiwanv.s3.ap-northeast-1.amazonaws.com"
key_id = "{{ keys.S3_KEY_ID }}"
access_key = "{{ keys.S3_ACCESS_KEY }}"
region = "ap-northeast-1"
public_url = "https://taiwanv.linnil1.me/thumbnail"

# New Relic Configuration
# HoloStats uses New Relic for collecting metrics data
#
# You can opt out by removing and commenting out the whole section
[newrelic]
# api_key = "NRII-XXXXXXX-XXXXXXXXXX"

{% for v in vtubers %}
[[vtubers]]
id = "{{v.id}}"
youtube = "{{v.youtube}}"
{% endfor %}
